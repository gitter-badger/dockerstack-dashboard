<link rel="stylesheet" href="/styles/home/main.css">
<% block('localScripts', '<script src="/js/privateCloud.js"></script>') %>

<div class="container">

    </br>

    <div class="navbar-right">

        <div class="btn-group">
            <button class="btn btn-success" type="button"><i class="fa fa-user"></i> Hello <%= user%> !</button>
            <button data-toggle="dropdown" class="btn btn-success dropdown-toggle" type="button"><span class="caret"></span>
            </button>
            <ul class="dropdown-menu">
                <li><a href="/auth/logout">Signout</a></li>

            </ul>
        </div>
    </div>

    <div class="row">
        <div class="header-nav">
            <h1><i class="fa fa-building-o fa-1x"></i> Private Cloud</h1>
        </div>
    </div>


    </br>

    <div class="col-lg-12">

        <div class="btn-group" style="margin-left:2%">
            <button type="button" class="btn btn-nav">
                <span class="fa fa-dashboard fa-3x"></span>
                <p><a href="/index/dashboard">Dashboard</a></p>
            </button>
        </div>

        <div class="btn-group" style="margin-left:2%">
            <button type="button" class="btn btn-nav">
                <span class="fa fa-cloud fa-3x"></span>
                <p><a href="/index/public">Public Cloud</a></p>
            </button>
        </div>
        <div class="btn-group" style="margin-left:2%">
            <button type="button" class="btn btn-nav">
                <span class="fa fa-sitemap fa-3x"></span>
                <p><a href="/index/network">Network</a></p>
            </button>
        </div>
        <div class="btn-group" style="margin-left:2%">
            <button type="button" class="btn btn-nav">
                <span class="fa fa-database fa-4x"></span>
                <p><a href="/index/storage">Storage</a></p>
            </button>
        </div>
        <div class="btn-group" style="margin-left:2%">
            <button type="button" class="btn btn-nav">
                <span class="fa fa-area-chart fa-3x"></span>
                <p><a href="/index/monitor">Monitoring</a></p>
            </button>
        </div>
        <div class="btn-group" style="margin-left:2%">
            <button type="button" class="btn btn-nav">
                <span class="fa fa-cubes fa-3x"></span>
                <p><a href="/index/deploy">Integrated</br>Deployments</a></p>
            </button>
        </div>
        <div class="btn-group" style="margin-left:2%">
            <button type="button" class="btn btn-nav">
                <span class="fa fa-users fa-3x"></span>
                <p><a href="/index/users">Users</a></p>
            </button>
        </div>

    </div>

    </br>

    <% if(service == "") {%>

    <div class="panel panel-primary graphs">
        <div class="panel-heading">
            Service Provider
        </div>
        <div class="panel-body">

            <div class="btn-group" style="margin-left:2%">
                <button type="button" class="btn btn-nav" data-toggle="modal" href="#aws">

                    <!--<img  src="../../images/vmware.png" alt="Smiley face" height="52px" width="56px">-->
                    <span class="fa fa-vine fa-4x"></span>
                    <p>Vmware</p>
                </button>
            </div>
            <div class="btn-group" style="margin-left:2%">
                <button type="button" class="btn btn-nav" data-toggle="modal" href="#azure">
                    <span class="fa fa-circle-o-notch fa-4x"></span>
                    <p>Openstack</p>
                </button>
            </div>

            <div class="btn-group" style="margin-left:2%">
                <button type="button" class="btn btn-nav" data-toggle="modal" href="#dedserver">
                    <span class="fa fa-hdd-o fa-4x"></span>
                    <p>Dedicated Server</p>
                </button>
            </div>

        </div>
    </div>



    <%} else {%>

    <div class="panel panel-primary graphs">
        <div class="panel-heading">
            Service Provider
        </div>
        <div class="panel-body">

    <% for (var i=0;i<service.length;i++) {%>


            <div style="float: right;">
                <%if (service[i].service == "Vmware") {%>
                <a  href="#">
                    <i class="fa fa-vine fa-2x fa-border"></i>
                </a>
                <% } else {%>
                <a  href="#">
                    <i class="fa fa-vine fa-2x fa-border noconfig"></i>
                </a>
                <%}%>

                <%if (service[i].service == "Openstack") {%>
                <a href="#">
                    <i class="fa fa-circle-o-notch fa-2x fa-border"></i>
                </a>
                <%}else{%>
                <a href="#">
                    <i class="fa fa-circle-o-notch fa-2x fa-border noconfig"></i>
                </a>
                <%}%>

                <%if (service[i].service == "Dedicated") {%>

                <a data-toggle="modal" href="#dedserver">
                    <i class="fa fa-hdd-o fa-2x fa-border "></i>
                </a>
                <% } else {%>
                <a data-toggle="modal" href="#dedserver">
                    <i class="fa fa-hdd-o fa-2x fa-border noconfig"></i>
                </a>
                <% }%>
            </div>
    <% }%>

</br>
</br>
</br>
            <div class="panel panel-primary">
                <div class="panel-heading">
                    Dedicated Server
                </div>
                <div class="panel-body">
                    <% for (var k=0;k<service.length;k++) {%>
                    <% if (service[k].service == "Dedicated") {%>
                        <div class="col-md-7">

                            <div class="panel panel-primary">
                                <div class="panel-heading">
                                    Server Details
                                </div>
                            <div class="panel-body">

                                Server Address : <%= service[k].hostname%>
                                </br>
                                Cpu's: nil
                                 </br>
                                Ram: nil
                                </br>
                                Storage: nil

                            </div>

                            </div>

                    </div>
                    <% }%>
                    <% }%>

                </div>

            </div>
        </div>
    </div>




    <% }%>

    <div id="dedserver" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Dedicated Server Credentials</h4>
                    </br>
                    <div class="alert alert-info" role="alert">
                        <p>Please enter the proper username and password of the server</p>

                    </div>
                </div>
                <div class="modal-body">

                    <form role="form" action="/private/creddedserver" method="post" autocomplete="off">
                        <div class="form-group">
                            <label  class="col-sm-3 control-label">Hostname</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="hostname" name="hostname">
                            </div>
                        </div>
                        </br>
                        </br>
                        <div class="form-group">
                            <label  class="col-sm-3 control-label">Username</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="username" name="username">
                            </div>
                        </div>

                        </br>
                        </br>

                        <div class="form-group">
                            <label  class="col-sm-3 control-label">Password</label>
                            <div class="col-sm-9">
                                <input type="password" class="form-control" id="password" name="password">
                            </div>
                        </div>

                        </br>
                        </br>

                        <div class="form-group">
                            <label for="description" class="col-sm-3 control-label">Port Number</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="portno" name="portno">
                            </div>
                        </div>

                        </br>
                        </br>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            <input type="submit" id="btn-login" class="btn btn-success btn-md login" value="Submit to Save" />
                        </div>
                    </form>

                    <input type="submit" id="btn-login" class="btn btn-primary btn-md login" value="Check Credentials" onClick="JavaScript:checkDedServercred()">
                </div>

            </div>
        </div>
    </div>
</div>